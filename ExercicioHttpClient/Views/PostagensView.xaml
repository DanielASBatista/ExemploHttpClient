<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExercicioHttpClient.Views.PostagensView"
             Title="PostagensView">
    
        <CollectionView ItemsSource="{Binding Listar}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Padding="10">
                        <Label 
                                Text="{Binding Id}" 
                                VerticalOptions="Center" 
                                HorizontalOptions="Center" />
                        <Label 
                                Text="{Binding Title}"
                                VerticalOptions="Center" 
                                HorizontalOptions="Center" />
                        <Label 
                                Text="{Binding Body}"
                                VerticalOptions="Center" 
                                HorizontalOptions="Center" />
                    <Button
                                Text="Carregar"
                                Command="{Binding CarregarPostagensCommand}"
                                />
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
    